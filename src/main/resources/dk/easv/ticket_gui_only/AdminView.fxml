<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="dk.easv.ticket_gui_only.GUI.AdminController"
            styleClass="admin-root">

    <!-- LEFT SIDEBAR (FULL HEIGHT) -->
    <left>
        <VBox prefWidth="260" styleClass="sidebar">
            <padding>
                <Insets top="22" right="18" bottom="18" left="18"/>
            </padding>

            <Label text="EASV Tickets" styleClass="sidebar-title"/>
            <Region prefHeight="22"/>
            <VBox spacing="10" styleClass="sidebar-nav">
                <fx:define>
                    <ToggleGroup fx:id="navGroup"/>
                </fx:define>

                <ToggleButton fx:id="usersBtn" text="Users" toggleGroup="$navGroup"
                              onAction="#showUsers" styleClass="nav-button"/>

                <ToggleButton fx:id="assignBtn" text="Assign Coordinators" toggleGroup="$navGroup"
                              onAction="#showAssign" styleClass="nav-button"/>

                <ToggleButton fx:id="eventsBtn" text="Events" toggleGroup="$navGroup"
                              onAction="#showEvents" styleClass="nav-button"/>

                <ToggleButton fx:id="settingsBtn" text="Settings" toggleGroup="$navGroup"
                              onAction="#showSettings" styleClass="nav-button"/>
            </VBox>

            <Region VBox.vgrow="ALWAYS"/>
            <Label text="Role: Admin" styleClass="sidebar-footer"/>
        </VBox>
    </left>

    <!-- RIGHT SIDE (TOPBAR + CONTENT) -->
    <center>
        <BorderPane>

            <top>
                <HBox spacing="12" alignment="CENTER_LEFT" styleClass="topbar">
                    <padding>
                        <Insets top="14" right="18" bottom="14" left="28"/>
                    </padding>

                    <Label text="EASV Tickets â€” Admin Panel" styleClass="topbar-title"/>
                    <HBox HBox.hgrow="ALWAYS"/>

                    <Label text="Admin: Jakub H." styleClass="pill"/>
                    <Button text="Log Out" onAction="#logout" styleClass="secondary-button"/>
                </HBox>
            </top>

            <center>
                <StackPane fx:id="contentHost"
                           styleClass="content-host"
                           alignment="TOP_LEFT"/>
            </center>

        </BorderPane>
    </center>

</BorderPane>
