<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
      spacing="14" styleClass="page">

    <Label text="Events (Read-only)" styleClass="page-title"/>
    <Label text="Admins manage users and coordinator access. Admins cannot create events." styleClass="page-subtitle"/>

    <VBox spacing="12">
        <HBox styleClass="card">
            <VBox spacing="6">
                <Label text="Tech Conference 2026" styleClass="card-title"/>
                <Label text="2026-03-15 at 09:00 AM • Copenhagen Convention Center" styleClass="card-subtext"/>
                <Label text="Coordinator: Sarah Johnson" styleClass="muted"/>
            </VBox>
            <HBox HBox.hgrow="ALWAYS"/>
            <Button text="View Details" styleClass="secondary-button"/>
            <Button text="Assign Coordinator" styleClass="secondary-button"/>
        </HBox>

        <HBox styleClass="card">
            <VBox spacing="6">
                <Label text="Music Festival" styleClass="card-title"/>
                <Label text="2026-06-20 at 06:00 PM • Aarhus Outdoor Arena" styleClass="card-subtext"/>
                <Label text="Coordinator: Emma Nielsen" styleClass="muted"/>
            </VBox>
            <HBox HBox.hgrow="ALWAYS"/>
            <Button text="View Details" styleClass="secondary-button"/>
            <Button text="Assign Coordinator" styleClass="secondary-button"/>
        </HBox>
    </VBox>
</VBox>
