<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="dk.easv.ticket_gui_only.GUI.EventsController"
      spacing="14"
      styleClass="page">

    <Label text="Events (Read-only)" styleClass="page-title"/>
    <Label text="Admins manage users and coordinator access. Admins cannot create events."
           styleClass="page-subtitle"/>

    <!-- PROOF BUTTON -->
    <HBox>
        <Button text="Generate Event" onAction="#generateEvent"
                styleClass="primary-button"/>
    </HBox>

    <VBox fx:id="eventsList" spacing="12"/>

</VBox>
