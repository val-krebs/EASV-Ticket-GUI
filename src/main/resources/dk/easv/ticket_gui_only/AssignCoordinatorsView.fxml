<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<HBox xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
      spacing="18" styleClass="page">

    <VBox spacing="14" HBox.hgrow="ALWAYS">
        <Label text="Assign Coordinators" styleClass="page-title"/>
        <Label text="Select a user and assign coordinator access to events." styleClass="page-subtitle"/>

        <VBox spacing="12" styleClass="card">
            <padding><Insets top="16" right="16" bottom="16" left="16"/></padding>
            <Label text="Current Coordinators" styleClass="section-title"/>

            <VBox spacing="10">
                <HBox styleClass="mini-card">
                    <VBox spacing="4">
                        <Label text="Sarah Johnson" styleClass="card-title"/>
                        <Label text="Assigned to: Tech Conference 2026, Music Festival" styleClass="card-subtext"/>
                    </VBox>
                    <HBox HBox.hgrow="ALWAYS"/>
                    <Button text="Edit" styleClass="secondary-button"/>
                </HBox>

                <HBox styleClass="mini-card">
                    <VBox spacing="4">
                        <Label text="Emma Nielsen" styleClass="card-title"/>
                        <Label text="Assigned to: Art Exhibition Opening" styleClass="card-subtext"/>
                    </VBox>
                    <HBox HBox.hgrow="ALWAYS"/>
                    <Button text="Edit" styleClass="secondary-button"/>
                </HBox>
            </VBox>
        </VBox>
    </VBox>

    <VBox spacing="14" prefWidth="420" styleClass="card">
        <padding><Insets top="16" right="16" bottom="16" left="16"/></padding>
        <Label text="Assign New Coordinator" styleClass="section-title"/>
        <Label text="(Mock-up form area)" styleClass="muted"/>

        <HBox spacing="10">
            <Button text="Save" styleClass="primary-button"/>
            <Button text="Cancel" styleClass="secondary-button"/>
        </HBox>
    </VBox>

</HBox>
