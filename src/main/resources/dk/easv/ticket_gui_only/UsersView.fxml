<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import java.lang.String?>

<VBox xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      spacing="14"
      styleClass="page">

    <Label text="User Management" styleClass="page-title"/>

    <Label text="Admins manage users and coordinator access. Admins cannot create events."
           styleClass="page-subtitle"/>

    <!-- Search -->
    <HBox spacing="10" styleClass="searchbar">
        <Label text="ðŸ”" styleClass="muted"/>
        <TextField promptText="Search users..." prefWidth="520" styleClass="search-input"/>
    </HBox>

    <!-- SCROLL ONLY THE LIST -->
    <ScrollPane fitToWidth="true"
                hbarPolicy="NEVER"
                vbarPolicy="AS_NEEDED"
                styleClass="users-scroll">

        <content>
            <VBox spacing="18" styleClass="users-list">
                <padding>
                    <Insets top="2" right="8" bottom="18" left="2"/>
                </padding>

                <!-- ROW 1 -->
                <HBox spacing="16">
                    <styleClass>
                        <String fx:value="card"/>
                        <String fx:value="user-row"/>
                    </styleClass>

                    <VBox spacing="4">
                        <Label text="Sarah Johnson" styleClass="card-title"/>
                        <Label text="sarah.johnson@easv.dk" styleClass="card-subtext"/>
                    </VBox>

                    <Region HBox.hgrow="ALWAYS"/>

                    <Label text="Coordinator">
                        <styleClass>
                            <String fx:value="tag"/>
                            <String fx:value="coordinator"/>
                        </styleClass>
                    </Label>

                    <Label text="3 events" styleClass="muted" minWidth="80"/>
                    <Button text="Remove Coordinator" styleClass="secondary-button"/>
                </HBox>

                <!-- ROW 2 -->
                <HBox spacing="16">
                    <styleClass>
                        <String fx:value="card"/>
                        <String fx:value="user-row"/>
                    </styleClass>

                    <VBox spacing="4">
                        <Label text="Michael Chen" styleClass="card-title"/>
                        <Label text="michael.chen@easv.dk" styleClass="card-subtext"/>
                    </VBox>

                    <Region HBox.hgrow="ALWAYS"/>

                    <Label text="User">
                        <styleClass>
                            <String fx:value="tag"/>
                            <String fx:value="user"/>
                        </styleClass>
                    </Label>

                    <Label text="0 events" styleClass="muted" minWidth="80"/>
                    <Button text="Assign Coordinator" styleClass="primary-button"/>
                </HBox>

                <!-- ROW 3 -->
                <HBox spacing="16">
                    <styleClass>
                        <String fx:value="card"/>
                        <String fx:value="user-row"/>
                    </styleClass>

                    <VBox spacing="4">
                        <Label text="Emma Nielsen" styleClass="card-title"/>
                        <Label text="emma.nielsen@easv.dk" styleClass="card-subtext"/>
                    </VBox>

                    <Region HBox.hgrow="ALWAYS"/>

                    <Label text="Coordinator">
                        <styleClass>
                            <String fx:value="tag"/>
                            <String fx:value="coordinator"/>
                        </styleClass>
                    </Label>

                    <Label text="5 events" styleClass="muted" minWidth="80"/>
                    <Button text="Remove Coordinator" styleClass="secondary-button"/>
                </HBox>

                <!-- ROW 4 -->
                <HBox spacing="16">
                    <styleClass>
                        <String fx:value="card"/>
                        <String fx:value="user-row"/>
                    </styleClass>

                    <VBox spacing="4">
                        <Label text="David Schmidt" styleClass="card-title"/>
                        <Label text="david.schmidt@easv.dk" styleClass="card-subtext"/>
                    </VBox>

                    <Region HBox.hgrow="ALWAYS"/>

                    <Label text="User">
                        <styleClass>
                            <String fx:value="tag"/>
                            <String fx:value="user"/>
                        </styleClass>
                    </Label>

                    <Label text="0 events" styleClass="muted" minWidth="80"/>
                    <Button text="Assign Coordinator" styleClass="primary-button"/>
                </HBox>

                <!-- ROW 5 -->
                <HBox spacing="16">
                    <styleClass>
                        <String fx:value="card"/>
                        <String fx:value="user-row"/>
                    </styleClass>

                    <VBox spacing="4">
                        <Label text="Anna Larsen" styleClass="card-title"/>
                        <Label text="anna.larsen@easv.dk" styleClass="card-subtext"/>
                    </VBox>

                    <Region HBox.hgrow="ALWAYS"/>

                    <Label text="Admin">
                        <styleClass>
                            <String fx:value="tag"/>
                            <String fx:value="admin"/>
                        </styleClass>
                    </Label>

                    <Label text="0 events" styleClass="muted" minWidth="80"/>
                    <Label text="No actions" styleClass="muted"/>
                </HBox>

                <!-- ROW 6 -->
                <HBox spacing="16">
                    <styleClass>
                        <String fx:value="card"/>
                        <String fx:value="user-row"/>
                    </styleClass>

                    <VBox spacing="4">
                        <Label text="Thomas Andersen" styleClass="card-title"/>
                        <Label text="thomas.andersen@easv.dk" styleClass="card-subtext"/>
                    </VBox>

                    <Region HBox.hgrow="ALWAYS"/>

                    <Label text="User">
                        <styleClass>
                            <String fx:value="tag"/>
                            <String fx:value="user"/>
                        </styleClass>
                    </Label>

                    <Label text="0 events" styleClass="muted" minWidth="80"/>
                    <Button text="Assign Coordinator" styleClass="primary-button"/>
                </HBox>

            </VBox>
        </content>
    </ScrollPane>

</VBox>
